

<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-6">
            <img class="img-movie" src="/img/@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Title">
    </div>
    <div class="col-md-6">
      <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                @Html.ActionLink("View Content", "Content", "Movies", new { MovieId = Model.MovieId }, null)
                <p>
                    <a class="btn btn-primary" href="movies/detail/@Model.MovieId">Details</a>
                </p>


      </div>
    </div>
  </div>
</div>